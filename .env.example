DISABLE_ESLINT_PLUGIN=true
ESLINT_NO_DEV_ERRORS=true

# API Configuration
# For development: http://localhost:8080
# For production: https://api.asyncsite.com
REACT_APP_API_BASE_URL=http://localhost:8080

# App Configuration
REACT_APP_APP_NAME=AsyncSite
REACT_APP_VERSION=$npm_package_version

# Admin Configuration
# Backoffice URL (optional - auto-detected if not set)
# For local development: http://localhost:5173
# For production: https://study-platform-backoffice.vercel.app
# REACT_APP_BACKOFFICE_URL=http://localhost:5173

# Admin Features Toggle
# Set to 'false' to hide admin features completely
REACT_APP_SHOW_ADMIN_FEATURES=true

# Admin Floating Toolbar
# Set to 'false' to disable floating admin toolbar
REACT_APP_ADMIN_TOOLBAR_ENABLED=true

# Debug Mode
# Set to 'true' to enable debug mode by default
REACT_APP_DEBUG_MODE=false