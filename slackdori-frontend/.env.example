# ====================================
# SLACKDORI ENVIRONMENT VARIABLES
# ====================================
# Copy this file to .env.local and fill in the values
# Never commit .env.local to version control

# -------------------------------------
# Application Configuration
# -------------------------------------
# Site URL (without trailing slash)
NEXT_PUBLIC_SITE_URL=https://slackdori.asyncsite.com

# Environment (development, staging, production)
NODE_ENV=development

# -------------------------------------
# API Configuration
# -------------------------------------
# Public API URL (used by browser)
NEXT_PUBLIC_API_URL=https://api.asyncsite.com

# Internal API URL (used by server)
API_URL=http://slack-emoji-service:8090

# API timeout in milliseconds
API_TIMEOUT=30000

# -------------------------------------
# Slack OAuth Configuration
# -------------------------------------
# Slack App Client ID (public)
NEXT_PUBLIC_SLACK_CLIENT_ID=your_slack_client_id_here

# Slack App Client Secret (private - never expose)
SLACK_CLIENT_SECRET=your_slack_client_secret_here

# Slack OAuth Redirect URI
NEXT_PUBLIC_SLACK_REDIRECT_URI=https://slackdori.asyncsite.com/auth/callback

# Slack OAuth Scopes (comma separated)
SLACK_OAUTH_SCOPES=emoji:write,emoji:read,team:read

# -------------------------------------
# Analytics & Monitoring
# -------------------------------------
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google AdSense Client ID
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXXXX

# Vercel Analytics (automatically injected by Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=

# -------------------------------------
# Feature Flags
# -------------------------------------
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ADS=true
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Maintenance mode
NEXT_PUBLIC_MAINTENANCE_MODE=false

# -------------------------------------
# SEO Configuration
# -------------------------------------
# Default meta tags
NEXT_PUBLIC_DEFAULT_TITLE=SlackDori - One-Click Slack Emoji Pack Installation
NEXT_PUBLIC_DEFAULT_DESCRIPTION=Install curated emoji packs to your Slack workspace with a single click. Browse developer, Korean, and custom emoji collections.
NEXT_PUBLIC_DEFAULT_KEYWORDS=slack emoji,slack emoji pack,slack custom emoji,bulk emoji upload,슬랙 이모지

# Open Graph default image
NEXT_PUBLIC_OG_IMAGE=https://slackdori.asyncsite.com/og/default.png

# -------------------------------------
# GitHub Configuration
# -------------------------------------
# GitHub repository for emoji packs
NEXT_PUBLIC_GITHUB_EMOJI_REPO=AsyncSite/slack-emoji-packs
NEXT_PUBLIC_GITHUB_RAW_URL=https://raw.githubusercontent.com

# -------------------------------------
# Rate Limiting
# -------------------------------------
# Max requests per minute
RATE_LIMIT_MAX_REQUESTS=60

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW=60000

# -------------------------------------
# Caching Configuration
# -------------------------------------
# Cache revalidation time in seconds
CACHE_REVALIDATE_SECONDS=3600

# Static generation timeout
STATIC_GENERATION_TIMEOUT=60

# -------------------------------------
# Development Configuration
# -------------------------------------
# Enable debug mode
DEBUG_MODE=false

# Mock API responses (for development)
USE_MOCK_API=false

# Enable verbose logging
VERBOSE_LOGGING=false

# -------------------------------------
# Security
# -------------------------------------
# CORS allowed origins (comma separated)
CORS_ALLOWED_ORIGINS=https://slackdori.asyncsite.com,https://asyncsite.com

# JWT Secret for session management (if needed)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_chars