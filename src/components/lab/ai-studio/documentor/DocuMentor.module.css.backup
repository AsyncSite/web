/* Main Container */
.documento {
  min-height: 100vh;
  background: #000;
  color: #f0f0f0;
  padding-bottom: 60px;
}

/* Hero Section */
.hero {
  max-width: 700px;
  margin: 0 auto;
  padding: 40px 20px;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.hero-content {
  position: relative;
  z-index: 2;
}

.logo {
  font-size: clamp(32px, 6vw, 48px);
  font-weight: 800;
  background: linear-gradient(135deg, #c3e88d 0%, #82b366 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10px;
}

.tagline {
  font-size: clamp(14px, 3vw, 18px);
  color: #999;
  margin-bottom: 20px;
}

.greeting {
  font-size: 16px;
  color: #c3e88d;
  margin-top: 20px;
  animation: fadeIn 0.8s ease;
}

/* Chat Bubbles */
.chat-bubbles {
  margin-top: 40px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.chat-bubble {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  padding: 20px;
  display: flex;
  align-items: center;
  gap: 15px;
  animation: float 3s ease-in-out infinite;
  backdrop-filter: blur(10px);
}

.chat-bubble.user {
  margin-right: 30px;
  background: rgba(195, 232, 141, 0.1);
  border-color: rgba(195, 232, 141, 0.3);
}

.chat-bubble.ai {
  margin-left: 30px;
  background: rgba(156, 39, 176, 0.1);
  border-color: rgba(156, 39, 176, 0.3);
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.bubble-emoji {
  font-size: 48px;
  flex-shrink: 0;
}

.bubble-text {
  text-align: left;
  flex: 1;
}

.bubble-text strong {
  display: block;
  font-size: 16px;
  margin-bottom: 5px;
  color: #fff;
}

.bubble-text span {
  font-size: 14px;
  color: #999;
}

/* Main Content */
.main-content {
  max-width: 700px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Form Container */
.form-container {
  display: flex;
  flex-direction: column;
  gap: 30px;
}

.form-card {
  background: #1a1a1a;
  border-radius: 12px;
  padding: 30px 25px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.form-title {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 25px;
  color: #fff;
}

/* Input Group */
.input-group {
  margin-bottom: 20px;
}

.url-input {
  width: 100%;
  padding: 18px 20px;
  font-size: 16px;
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid rgba(195, 232, 141, 0.2);
  border-radius: 15px;
  color: #fff;
  transition: all 0.3s;
}

.url-input:focus {
  outline: none;
  border-color: #c3e88d;
  background: rgba(195, 232, 141, 0.05);
  box-shadow: 0 0 20px rgba(195, 232, 141, 0.1);
}

.url-input::placeholder {
  color: #666;
}

.url-input.error {
  border-color: #ff6b6b;
}

.error-message {
  color: #ff6b6b;
  font-size: 14px;
  margin-top: 8px;
  display: flex;
  align-items: center;
  gap: 5px;
}

/* Platform Chips */
.platforms {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 25px;
}

.platform-chip {
  padding: 10px 16px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  font-size: 14px;
  color: #999;
  cursor: pointer;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  gap: 6px;
}

.platform-chip:hover {
  background: rgba(195, 232, 141, 0.1);
  border-color: #c3e88d;
  color: #c3e88d;
  transform: translateY(-2px);
}

.platform-emoji {
  font-size: 16px;
}

.platform-name {
  font-weight: 500;
}

/* Notification Options */
.notification-options {
  margin-bottom: 25px;
}

.option-label {
  font-size: 14px;
  color: #999;
  margin-bottom: 12px;
}

.radio-group {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
}

.radio-label {
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  padding: 8px 12px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  transition: all 0.3s;
}

.radio-label:hover {
  background: rgba(195, 232, 141, 0.05);
  border-color: rgba(195, 232, 141, 0.3);
}

.radio-label input[type="radio"] {
  accent-color: #c3e88d;
}

.radio-label input[type="radio"]:checked + span {
  color: #c3e88d;
}

/* Submit Button */
.submit-button {
  width: 100%;
  padding: 18px;
  font-size: 16px;
  font-weight: 700;
  background: linear-gradient(135deg, #c3e88d 0%, #82b366 100%);
  color: #000;
  border: none;
  border-radius: 15px;
  cursor: pointer;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.submit-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(195, 232, 141, 0.3);
}

.submit-button:active:not(:disabled) {
  transform: translateY(0);
}

.submit-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  background: #444;
  color: #999;
}

/* Usage Counter */
.usage-counter {
  text-align: center;
  margin-top: 15px;
  font-size: 14px;
  color: #666;
}

.count-number {
  font-weight: 700;
  color: #c3e88d;
}

.remaining {
  color: #82b366;
}

.reset-time {
  color: #999;
}

/* Error Messages */
.global-error {
  background: rgba(255, 107, 107, 0.1);
  border: 1px solid rgba(255, 107, 107, 0.3);
  border-radius: 10px;
  padding: 12px;
  margin-top: 15px;
  color: #ff6b6b;
  font-size: 14px;
}

/* Example Section */
.example-section {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-top: 15px;
}

.example-title {
  font-size: 18px;
  font-weight: 600;
  color: #fff;
}

.example-card {
  background: #1a1a1a;
  border-radius: 12px;
  padding: 25px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.score-circle {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #c3e88d 0%, #82b366 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  font-size: 24px;
  font-weight: 800;
  color: #000;
}

.feedback-section {
  margin-bottom: 20px;
}

.feedback-section:last-child {
  margin-bottom: 0;
}

.feedback-title {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  gap: 8px;
  color: #fff;
}

.feedback-item {
  background: rgba(255, 255, 255, 0.03);
  padding: 12px;
  border-radius: 10px;
  margin-bottom: 8px;
  font-size: 14px;
  color: #ccc;
  border-left: 3px solid #c3e88d;
}

/* Processing Container */
.processing-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  padding: 40px 20px;
}

.processing-card {
  background: #1a1a1a;
  border-radius: 12px;
  padding: 40px;
  max-width: 500px;
  width: 100%;
  text-align: center;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.processing-emoji {
  font-size: 64px;
  margin-bottom: 20px;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.processing-title {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 30px;
  color: #fff;
}

.processing-steps {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30px;
  position: relative;
}

.processing-steps::before {
  content: '';
  position: absolute;
  top: 20px;
  left: 10%;
  right: 10%;
  height: 2px;
  background: rgba(255, 255, 255, 0.1);
  z-index: 0;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  position: relative;
  z-index: 1;
}

.step-number {
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  transition: all 0.3s;
}

.step.active .step-number {
  background: rgba(195, 232, 141, 0.2);
  border-color: #c3e88d;
  color: #c3e88d;
}

.step.completed .step-number {
  background: #c3e88d;
  border-color: #c3e88d;
  color: #000;
}

.step-label {
  font-size: 12px;
  color: #666;
}

.step.active .step-label,
.step.completed .step-label {
  color: #c3e88d;
}

.progress-bar {
  height: 6px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3px;
  overflow: hidden;
  margin-bottom: 20px;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #c3e88d 0%, #82b366 100%);
  transition: width 0.5s ease;
}

.processing-hint {
  font-size: 14px;
  color: #999;
}

/* Results Container */
.results-container {
  /* Already constrained by main-content */
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding: 20px;
  background: #1a1a1a;
  border-radius: 12px;
  flex-wrap: wrap;
  gap: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.url-info {
  flex: 1;
  min-width: 200px;
}

.url-label {
  display: block;
  font-size: 12px;
  color: #666;
  margin-bottom: 5px;
}

.url-link {
  color: #c3e88d;
  text-decoration: none;
  font-size: 14px;
  display: flex;
  align-items: center;
  gap: 5px;
  word-break: break-all;
}

.url-link:hover {
  text-decoration: underline;
}

.link-icon {
  flex-shrink: 0;
}

.header-actions {
  display: flex;
  gap: 10px;
}

.share-button,
.new-review-button {
  padding: 10px 20px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  color: #999;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.3s;
}

.share-button:hover,
.new-review-button:hover {
  background: rgba(195, 232, 141, 0.1);
  border-color: #c3e88d;
  color: #c3e88d;
}

/* Score Card */
.score-card {
  background: #1a1a1a;
  border-radius: 12px;
  padding: 30px 25px;
  margin-bottom: 20px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.main-score {
  display: flex;
  align-items: center;
  gap: 20px;
  margin-bottom: 20px;
}

.score-circle-large {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  position: relative;
  background: linear-gradient(135deg, #c3e88d 0%, #82b366 100%);
  color: #000;
}

.score-excellent {
  background: linear-gradient(135deg, #4ade80 0%, #22c55e 100%);
}

.score-good {
  background: linear-gradient(135deg, #c3e88d 0%, #82b366 100%);
}

.score-average {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
}

.score-poor {
  background: linear-gradient(135deg, #fb923c 0%, #f97316 100%);
}

.score-number {
  font-size: 48px;
  line-height: 1;
}

.score-label {
  font-size: 16px;
}

.score-emoji {
  font-size: 48px;
}

.score-summary {
  font-size: 16px;
  color: #ccc;
  line-height: 1.6;
  margin-bottom: 30px;
  padding: 15px;
  background: rgba(195, 232, 141, 0.05);
  border-left: 3px solid #c3e88d;
  border-radius: 5px;
}

/* Detail Scores */
.detail-scores {
  display: grid;
  gap: 15px;
}

.detail-score-item {
  display: grid;
  grid-template-columns: 30px 120px 1fr 40px;
  align-items: center;
  gap: 12px;
}

.detail-emoji {
  font-size: 20px;
}

.detail-label {
  font-size: 14px;
  color: #999;
}

.detail-bar {
  height: 8px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
}

.detail-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #c3e88d 0%, #82b366 100%);
  transition: width 1s ease;
}

.detail-value {
  font-size: 14px;
  font-weight: 600;
  color: #c3e88d;
  text-align: right;
}

/* Review Sections */
.review-sections {
  display: grid;
  gap: 20px;
  margin-bottom: 30px;
}

.review-section {
  background: #1a1a1a;
  border-radius: 12px;
  padding: 25px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.review-section.positive {
  border-color: rgba(195, 232, 141, 0.3);
  background: rgba(195, 232, 141, 0.03);
}

.review-section.improvement {
  border-color: rgba(251, 191, 36, 0.3);
  background: rgba(251, 191, 36, 0.03);
}

.review-section.suggestion {
  border-color: rgba(139, 92, 246, 0.3);
  background: rgba(139, 92, 246, 0.03);
}

.review-section-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 15px;
  display: flex;
  align-items: center;
  gap: 10px;
  color: #fff;
}

.section-emoji {
  font-size: 24px;
}

.review-items {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.review-item {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  padding: 12px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 10px;
  font-size: 14px;
  line-height: 1.6;
}

.item-bullet {
  flex-shrink: 0;
  font-size: 16px;
}

.item-text {
  color: #ccc;
}

/* Metadata */
.metadata {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-bottom: 20px;
  padding: 20px;
  background: #1a1a1a;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 10px;
}

.meta-label {
  font-size: 14px;
  color: #666;
}

.meta-value {
  font-size: 14px;
  color: #c3e88d;
  font-weight: 600;
}

.keywords {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.keyword {
  padding: 4px 12px;
  background: rgba(195, 232, 141, 0.1);
  border: 1px solid rgba(195, 232, 141, 0.3);
  border-radius: 15px;
  font-size: 12px;
  color: #c3e88d;
}

/* Bottom CTA */
.bottom-cta {
  text-align: center;
  padding: 30px 25px;
  background: #1a1a1a;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.cta-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 10px;
  color: #fff;
}

.cta-text {
  font-size: 16px;
  color: #999;
  margin-bottom: 25px;
}

.cta-buttons {
  display: flex;
  gap: 15px;
  justify-content: center;
  flex-wrap: wrap;
}

.edit-button,
.another-button {
  padding: 14px 28px;
  font-size: 16px;
  font-weight: 600;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s;
  border: none;
}

.edit-button {
  background: linear-gradient(135deg, #c3e88d 0%, #82b366 100%);
  color: #000;
}

.edit-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(195, 232, 141, 0.3);
}

.another-button {
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid #c3e88d;
  color: #c3e88d;
}

.another-button:hover {
  background: rgba(195, 232, 141, 0.1);
  transform: translateY(-2px);
}

/* Features Section */
.features {
  padding: 60px 0;
}

.features-title {
  font-size: 28px;
  font-weight: 700;
  text-align: center;
  margin-bottom: 40px;
  color: #fff;
}

.feature-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}

.feature-card {
  background: #1a1a1a;
  border-radius: 12px;
  padding: 25px;
  text-align: center;
  transition: all 0.3s;
  cursor: pointer;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.feature-card:hover {
  transform: translateY(-5px);
  border-color: #c3e88d;
  background: rgba(195, 232, 141, 0.05);
}

.feature-emoji {
  font-size: 40px;
  margin-bottom: 15px;
}

.feature-name {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #fff;
}

.feature-desc {
  font-size: 14px;
  color: #999;
  line-height: 1.5;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(20px);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

/* Mobile Responsive */
@media (max-width: 700px) {
  .hero {
    padding: 30px 15px;
  }
  
  .main-content {
    padding: 0 15px;
  }
  
  .chat-bubble.user {
    margin-right: 15px;
  }
  
  .chat-bubble.ai {
    margin-left: 15px;
  }
  
  .bubble-emoji {
    font-size: 36px;
  }
  
  .results-header {
    flex-direction: column;
    align-items: stretch;
  }
  
  .header-actions {
    justify-content: space-between;
  }
  
  .main-score {
    flex-direction: column;
    text-align: center;
  }
  
  .detail-score-item {
    grid-template-columns: 30px 1fr 40px;
  }
  
  .detail-label {
    grid-column: 1 / -1;
    margin-bottom: 5px;
  }
  
  .platforms {
    justify-content: center;
  }
  
  .feature-cards {
    grid-template-columns: 1fr;
  }
}